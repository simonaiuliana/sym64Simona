version: '3.8'

services:
  mysql:
    image: mysql:8.0
    container_name: simona_mysql
    environment:
      MYSQL_ROOT_PASSWORD: root
      MYSQL_DATABASE: sym64simona
      MYSQL_USER: simona
      MYSQL_PASSWORD: simona123
    ports:
      - "3307:3306"
    volumes:
      - mysql_data:/var/lib/mysql
    networks:
      - simona_network

  php:
    build:
      context: .
      dockerfile: docker/php/Dockerfile
    volumes:
      - .:/var/www/html
    environment:
      DATABASE_URL: "mysql://simona:simona123@mysql:3306/sym64simona?serverVersion=8.0"
    networks:
      - simona_network
    depends_on:
      - mysql

  nginx:
    image: nginx:alpine
    ports:
      - "8888:80"
    volumes:
      - .:/var/www/html
      - ./docker/nginx/default.conf:/etc/nginx/conf.d/default.conf
    depends_on:
      - php
    networks:
      - simona_network

volumes:
  mysql_data:

networks:
  simona_network:
    driver: bridge