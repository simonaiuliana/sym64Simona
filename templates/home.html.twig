{% extends 'base.html.twig' %}

{% block content %}
<h1>{{ title }}</h1>

<!-- Display Sections -->
<h2>Sections</h2>
<ul class="list-group">
    {% for section in sections %}
        <li class="list-group-item">
            <a href="{{ path('section_show', {'slug': section.section_slug}) }}">{{ section.section_title }}</a>
        </li>
    {% endfor %}
</ul>

<!-- Display Articles -->
<h2>Latest Articles</h2>
<ul class="list-group">
    {% for article in articles %}
        <li class="list-group-item">
            <h3>{{ article.title }}</h3>
            <p>{{ article.text|slice(0, 300) }}...</p>
            <a href="{{ path('article_show', {'slug': article.title_slug}) }}" class="btn btn-primary">Read More</a>
        </li>
    {% endfor %}
</ul>

<!-- Login Button -->
<a href="{{ path('security_login') }}" class="btn btn-secondary">Login</a>

{% endblock %}
