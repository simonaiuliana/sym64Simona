{% extends 'base.html.twig' %}

{% block content %}
    <div class="container my-4">
        <h1>{{ section.sectionTitle }}</h1>
        <p>{{ section.sectionDetail }}</p>
        
        {% if section.articles|length > 0 %}
            <ul class="list-group mt-3">
                {% for article in section.articles %}
                    <li class="list-group-item">
                        <h2>{{ article.title }}</h2>
                        <p>{{ article.excerpt|default(article.text|slice(0, 100) ~ '...') }}</p>
                        <a href="{{ path('article_show', {'slug': article.titleSlug}) }}" class="btn btn-primary">Read more</a>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <p class="mt-3">Pas des articles dans cete section.</p>
        {% endif %}
        
        <a href="{{ path('homepage') }}" class="btn btn-secondary mt-4">Return to Home</a>
    </div>
{% endblock %}
