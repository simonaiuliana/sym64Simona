{% extends 'base.html.twig' %}

{% block title %}Section: {{ section.sectionTitle }}{% endblock %}

{% block body %}
    <!-- Page Header-->
    <header class="masthead" style="background-image: url('assets/img/post-bg.jpg')">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="post-heading">
                        <h1 class="text-center">Section: {{ section.sectionTitle }}</h1>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container-fluid px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <h1><a href="{{ path('section', {slug: section.sectionSlug}) }}">Section</a></h1>

                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ section.id }}</td>
                        </tr>
                        <tr>
                            <th>Titre</th>
                            <td>{{ section.sectionTitle }}</td>
                        </tr>
                        <tr>
                        <th>Description</th>
                            <td>{{ section.sectionDetail }}</td>
                        </tr>
                    </tbody>
                </table>

                <a href="{{ path('app_crud_section_index') }}">Retour Ã  la liste</a>

                <a href="{{ path('app_crud_section_edit', {'slug': section.sectionSlug}) }}">Modifier</a>

                {{ include('crud_section/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
