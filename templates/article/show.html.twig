{# templates/article/show.html.twig #}
{% extends 'base.html.twig' %}

{% block content %}
<h1>{{ article.title }}</h1>
<p>By {{ article.user.fullname }} on {{ article.articleDateCreate|date('Y-m-d H:i') }}</p>
<p>{{ article.text }}</p>
<a href="{{ path('homepage') }}" class="btn btn-secondary">Return vers l'accueil</a>
{% endblock %}
